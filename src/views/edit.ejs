<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <%- include('partials/head.ejs') %>
</head>
<body>

  <%- include('partials/header.ejs') %>
  
  <h1> <%= title %> </h1>

  <form action="/edit/<%= user._id %>" method="POST">
    <div>
      <label>Nome</label>
      <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name %>">
    </div>

    <div>
      <label>Idade</label>
      <input type="text" name="age" placeholder="Digite a sua idade" value="<%= user.age %>">
    </div>

    <div>
      <label>E-mail</label>
      <input type="text" name="email" placeholder="Digite o seu email" value="<%= user.email %>">
    </div>

    <button type="submit">Salvar</button>
  </form>

  <%- include('partials/footer.ejs') %>


  <%- include('partials/foot.ejs') %>
  
</body>
</html>